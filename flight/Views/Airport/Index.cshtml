<table id="Airport" class="table table-striped">
    <thead>
        <tr>
            <th scope="col"> Airport ID</th>
            <th scope="col"> Airport </th>
            <th scope="col"> Latitude </th>
            <th scope="col"> Longitude </th>
            <th scope="col"> Edit </th>
            <th scope="col"> Delete </th>
        </tr>
    </thead>
    <tbody>
